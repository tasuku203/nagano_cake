<div class="container">
  <div class="row">
    <h1>商品詳細</h1>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @item, :image,  width: '50%', height: '50%' %>
    </div>
    <div class="col-md-9">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込み価格</td>
            <td><%= @item.with_tax_price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
              <p class="text-success">販売中</p>
              <% elsif @item.is_active == false %>
              販売停止中
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>
  </div>
</div>