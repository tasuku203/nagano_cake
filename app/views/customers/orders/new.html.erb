<div class="container">
  <div class="row">
    <h2>注文情報入力</h2>
  </div>
  <div class="row">
    <h5>支払い方法</h5>
  </div>
  <div>
    <%= form_with model:@order, url:confirm_orders_path, method: :post, local:true do |f| %>
      <%= f.radio_button :payment_method, "credit_card" %>
      <%= f.label :payment_method, "クレジットカード" %></br>

      <%= f.radio_button :payment_method, "transfer" %>
      <%= f.label :payment_method, "銀行振り込み" %>
  </div>
  <div class="row">
    <h5>お届け先</h5>
  </div>
  <div>
    <%= f.radio_button :select_address, 0 %>
    <%= f.label :select_address, "ご自身の住所" %></br>
    <%= current_customer.full_address %></br>
    <%= current_customer.full_name %></br>
    <%# Customerモデルのデータベースに登録されている住所のこと%>
  </div>
  <div>
    <%= f.radio_button :select_address, 1 %>
    <%= f.label :select_address, "登録済住所から選択"%>
    <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address)%></br>
    <%# Addressモデルに登録されているデータのこと %>
  </div>
  <div>
    <%= f.radio_button :select_address, 2 %>
    <%= f.label :select_address, "新しいお届け先" %>
    <%# Orderモデルのアドレスカラムにデータを保存する %>
    <table class="table">
      <tbody>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
        </tr>
      </tbody>
    </table>
  </civ>
  <div class="row justify-content-center">
      <%= f.submit  "確認画面へ進む", class:"btn btn-primary" %>
  </div>
    <% end %>
</div>

