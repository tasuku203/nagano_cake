<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <table class="table">
    <tbody>
      <tr>
        <td>名前</td>
        <td>(姓)<%= f.text_field :last_name %></td>
        <td>(名)<%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>(セイ)<%= f.text_field :last_name_kana %></td>
        <td>(メイ)<%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号(ハイフンなし)</td>
        <td><%= f.telephone_field :telephone_number %></td>
      </tr>
      <tr>
        <td>パスワード(6文字以上)</td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td>パスワード(確認用)</td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新規登録" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<%= render "customers/shared/links" %>
