<div class="container">
  <div class="row">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <div class="row">
    <div class="col-5">
    <table class="table borderless">
      <tbody>
        <tr>
          <td>ジャンル名</td>
          <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録" ,class:"btn btn-success"%></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
    <table class="table borderless">
      <tbody>
        <tr class="table-active">
          <td>ジャンル</td>
          <td></td>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集", edit_admin_genre_path(genre.id), class:"btn btn-success"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

