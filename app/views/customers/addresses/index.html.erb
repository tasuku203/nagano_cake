<div class="container">
  <div class="row">
    <h3>配送先登録/一覧</h3>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @address, url: addresses_path, method: :post, local: true do |f| %>
          <table class="table table-borderless">
            <tbody>
              <tr row="1">
                <th>郵便番号(ハイフンなし)</th>
                <td><%= f.text_field :postal_code %></td>
                <td></td>
                <td></td>
              </tr>
              <tr row="2">
                <th>住所</th>
                <td colspan="2"><%= f.text_field :address %></td>
              </tr>
              <tr row="3">
                <th>宛名</th>
                <td><%= f.text_field :name %></td>
                <td></td>
                <td><%= f.submit "新規登録" ,class:"btn btn-success"%></td>
              </tr>
            </tbody>
          </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
    <table class="table table-bordered">
      <thead>
        <tr class="table-secondary">
          <th scope="col">郵便番号</th>
          <th scope="col">住所</th>
          <th scope="col">宛名</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <% @addresses.each do |address| %>
      <tbody>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id),class:"btn btn-success" %>
            <%= link_to "削除する", address_path(address.id), method: :delete,class:"btn btn-danger"%>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
  </div>
</div>
