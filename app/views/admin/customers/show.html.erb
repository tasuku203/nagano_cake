<h1><%= @customer.full_name %>さんの会員詳細</h1>
<table class="table">
  <tbody>
    <tr>
      <th scope="row">会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th scope="row">氏名</th>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <% if @customer.is_active == true %>
        <p>有効</p>
        <% elsif @customer.is_active == false %>
        <p>退会</p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to "編集する",edit_admin_customer_path(@customer.id) %>
<%= link_to "注文履歴一覧を見る", admin_path %>