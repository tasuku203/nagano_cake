<h1><%= @customer.full_name %>さんの会員詳細</h1>
<%= form_with model:@customer, url:admin_customer_path, method: :Patch, local: true do |f| %>
<table class="table">
  <tbody>
    <tr>
      <th scope="row">会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th scope="row">氏名</th>
      <td><%= f.text_field :full_name%></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :full_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.telephone_field :telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_active, true%>
        <%= f.label :is_active, "有効" %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "無効" %>
      </td>
    </tr>
   <%= f.submit "変更を保存" %>
  </tbody>
  <% end %>