<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">購入者</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th scope="row">注文日</th>
          <td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <th scope="row">配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th scope="row">支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th scope="row">注文ステータス</th>
            <td>
              <%= form_with model:@order, url:admin_order_path, local:true do |f| %>
                <%= f.select :status, Order.statuses_i18n.keys.map{|k| [Order.statuses_i18n[k],k]} %>
                <%= f.submit "更新", class:"btn btn-success" %>
              <% end %>
            </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table">
        <tbody>
          <tr>
            <th>商品</th>
            <td>単価</td>
            <td>個数</td>
            <td>小計</td>
            <td>制作ステータス</td>
          </tr>
          <% @order_details.each do |order_detail| %>
          <tr>
            <th><%= order_detail.item.name %></th>
            <td><%= order_detail.with_tax_price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.with_tax_price * order_detail.quantity %></td>
            <td>
              <%= form_with model:order_detail, url:admin_order_detail_path(order_detail.id), method: :Patch,  local:true do |f| %>
                <%= f.select :making_status, OrderDetail.making_statuses_i18n.keys.map{|k| [OrderDetail.making_statuses_i18n[k],k]} %>
                <%= f.submit "更新", class:"btn btn-primary" %>
              <% end %>
              <%#I18n.t("enum.order_detail.making_status.#{k}"),%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col">
      <table class="table">
      <tbody>
        <tr>
          <th scope="row">商品合計</th>
          <td><%= @order.total_payment - @order.shipping_cost %></td>
        </tr>
        <tr>
          <th scope="row">配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th scope="row">ご請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>
