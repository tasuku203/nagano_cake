<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: addresses_path, method: :post, local: true do |f| %>

    <table class="table">
      <tbody>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録" %></td>
        </tr>
      </tbody>
    </table>
<% end %>

<% @addresses.each do |address| %>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">郵便番号</th>
          <th scope="col">住所</th>
          <th scope="col">宛名</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address.id) %><%= link_to "削除する", address_path(address.id), method: :delete %></td>
        </tr>
      </tbody>
    </table>
<% end %>